generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model achievements {
  id               String   @id @default(uuid())
  credential_id    String?
  name             String
  issuing_organ    String?
  issue_date       DateTime
  expiration_date  DateTime?  // jika kamu tambahkan field ini nantinya
  image            String
  url_credential   String
  category         String?     // kamu perlu tambahkan ini di Supabase agar sesuai
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
}



model Projects {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  description  String
  image        String
  stacks       String[] // array of string, bisa disimpan langsung di PostgreSQL
  is_featured  Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

